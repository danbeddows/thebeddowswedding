generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
	id                Int          @id @default(autoincrement())
	name              String       @default("")
	phone             String?       
	isSmsSent         Boolean      @default(false)
	parties           PartyGuest[]
	dietReqs          String?    
	foodChoice        String       @default("-1")
	isChild           Boolean      @default(false)
	photos            Photo[]
}

model Party {
	id                Int          @id @default(autoincrement())
	hash              String       @unique
	hasChosenMeals    Boolean      @default(false)
	guests            PartyGuest[]
	internalLabel     String       @default("")
}

model PartyGuest {
	party        Party  @relation(fields: [partyId], references: [id])
	partyId      Int
	guest        Guest @relation(fields: [guestId], references: [id])
	guestId      Int
	displayOrder Int

	@@id([partyId, guestId])
}

model Photo {
	id                Int      @id @default(autoincrement())
  owner             Guest    @relation(fields: [ownerId], references: [id])
	ownerId           Int 
	hash              String   @unique
	uploadTimestamp   DateTime
	fileType          String
	fileSize          Int
	fileUrl           String
	photoWidth        Int
	photoHeight       Int
	photoTimestamp    DateTime
	isPendingApproval Boolean  @default(true)
	isDeleted         Boolean  @default(false)
	isVisible         Boolean  @default(false)
}